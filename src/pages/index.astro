---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import PostsTable from '../components/PostsTable.astro';
import BooksGrid from '../components/BooksGrid.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import { getCollection } from 'astro:content';
import { Content as AboutContent } from '../content/about.md';
import { books } from '../booksData';

// Get 3 most recent posts
const allPosts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
const recentPosts = allPosts.slice(0, 3);

// Get currently reading books
const currentlyReading = books.filter(book => book.status === 'reading');
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main class="mx-auto w-full lg:w-5/8 px-6 py-10 space-y-12">
			<!-- About Card -->
			<div class="rounded-lg border bg-card p-6 flex gap-6 items-start">
				<div class="flex-shrink-0">
					<img src="/pfp.jpg" alt="Profile picture" class="w-28 h-28 rounded-full object-cover" />
				</div>
				<div class="flex-shrink-0 w-px h-28 bg-border"></div>
				<div class="prose flex-1">
					<AboutContent />
				</div>
			</div>

			<!-- Recent Posts -->
			<section class="space-y-6">
				<h2 class="text-xl font-semibold">Recent Posts</h2>
				<PostsTable posts={recentPosts} />
			</section>

			<!-- Currently Reading -->
			{currentlyReading.length > 0 && (
				<section class="space-y-6">
					<div class="flex items-center justify-between">
						<h2 class="text-xl font-semibold">Currently Reading</h2>
						<a href="/reads" class="text-sm hover:underline">View all â†’</a>
					</div>
					<BooksGrid books={currentlyReading} showRating={false} showDate={false} />
				</section>
			)}
		</main>
		<Footer />
	</body>
</html>
